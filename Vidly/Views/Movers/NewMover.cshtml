
@model Vidly.Models.Mover
@{
    ViewBag.Title = "NewMover";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = TempData["success"] ?? string.Empty;
}

<h2>New Mover</h2>

@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        <strong>Success!</strong> @TempData["success"]
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            <li>
                <strong>  @Html.ValidationMessageFor(m => m.Name) </strong>
            </li>
            <li>
                <strong>  @Html.ValidationMessageFor(m => m.Address) </strong>
            </li>
        </ul>
    </div>
}





@using (Html.BeginForm("Create", "Movers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Save</button>
}

